<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_mercadopago_card" model="payment.method">
        <field name="name">MercadoPagoCard</field>
        <field name="code">mercadopago_card</field>
        <field name="primary_payment_method_id" eval="ref('payment.payment_method_card')"/>
        <field name="sequence">1</field>
        <field name="active">False</field>
        <field name="image" type="base64" file="payment_mercadopago/static/description/icon.png"/>
    </record>

    <record id="payment_provider_mercadopago" model="payment.provider">
        <field name="name">MercadoPago</field>
        <field name="code">mercadopago</field>
        <field name="image_128" type="base64" file="payment_mercadopago/static/description/icon.png"/>
        <field name="module_id" ref="base.module_payment_mercadopago"/>
        <field name="inline_form_view_id" ref="inline_form"/>
        <field name="support_refund">partial</field>
        <field name="support_tokenization">True</field>
        <field name="allow_tokenization">True</field>
        <field name="payment_method_ids"
               eval="[Command.set([
                         ref('payment.payment_method_card'),
                         ref('payment.payment_method_bank_transfer'),
                         ref('payment.payment_method_paypal'),
                     ])]"/>
        <!-- <field name="payment_method_ids" eval='[(6, 0, [ref("payment.payment_method_amex"),
                                                        ref("payment.payment_method_mastercard"),
                                                        ref("payment.payment_method_visa"),
                                                        ref("payment_mercadopago.payment_method_mercadopago_card")])]'/> -->
    </record>



    <record id="payment_method_mercadopago" model="account.payment.method">
        <field name="name">MercadoPago</field>
        <field name="code">mercadopago</field>
        <field name="payment_type">inbound</field>
    </record>
</odoo>
