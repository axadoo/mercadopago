<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="delay_refund" model="ir.cron">
            <field name="name">Mercadopago delay refund</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field eval="(DateTime.now().replace(hour=5, minute=0) + timedelta(hours=24)).strftime('%Y-%m-%d %H:%M:%S')" name="nextcall"/>
            <field eval="False" name="doall"/>
            <field name="model_id" ref="payment.model_payment_transaction"/>
            <field name="code">model._cron_mercadopago_delay_refund()</field>
            <field name="state">code</field>
        </record>
    </data>
</odoo>
