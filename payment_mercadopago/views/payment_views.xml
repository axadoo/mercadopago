<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="acquirer_form_mercadopago" model="ir.ui.view">
            <field name="name">acquirer.form.mercadopago</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='inside'>
                    <group attrs="{'invisible': [('provider', '!=', 'mercadopago')]}">
                        <field name="mercadopago_publishable_key" attrs="{'invisible':['|', '|', ('provider', '!=', 'mercadopago'), ('payment_flow', '!=', 's2s')], 'required':[ ('provider', '=', 'mercadopago'), ('state', '!=', 'disabled'), ('payment_flow', '=', 's2s')]}"/>
                        <field name="mercadopago_access_token" password="True" attrs="{'invisible':['|', '|', ('provider', '!=', 'mercadopago'), ('payment_flow', '!=', 's2s')], 'required':[ ('provider', '=', 'mercadopago'), ('state', '!=', 'disabled'), ('payment_flow', '=', 's2s')]}"/>
                        <!-- Add by MercadoPago redirect -->
                        <field name="mercadopago_client_id" attrs="{'invisible':['|', '|', ('provider', '!=', 'mercadopago'), ('payment_flow', '!=', 'form')], 'required':[ ('provider', '=', 'mercadopago'), ('state', '!=', 'disabled'), ('payment_flow', '=', 'form')]}"/>
                        <field name="mercadopago_secret_key" attrs="{'invisible':['|', '|', ('provider', '!=', 'mercadopago'), ('payment_flow', '!=', 'form')], 'required':[ ('provider', '=', 'mercadopago'), ('state', '!=', 'disabled'), ('payment_flow', '=', 'form')]}"/>
                        <!--  -->
                        <a colspan="2" href="https://www.mercadopago.com/mla/account/credentials" target="_blank">How to generate this credentials</a>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>
